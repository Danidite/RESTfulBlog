<%- include("partials/header") %>

<div class="container">
    <div class="jumbotron p-4">
        <h1>RESTful Blog App</h1>
    </div>

    <div class="row">
        
        <% for(const blog of blogs.reverse()){ %>
            <div class="col-12">
                <div class="card m-0">
                    <div class="row no-gutters">
                      <div class="col-md-4">
                        <img src="<%= blog.image %>" class="card-img" alt="...">
                      </div>
                      <div class="col-md-8">
                        <div class="card-body">
                          <h5 class="card-title"><%= blog.title %></h5>
                          <p class="card-text"><%- blog.body.replace(/<\/?[^>]+(>|$)/g, "").substring(0, 100) %>...</p>
                          <p class="card-text"><small class="text-muted">Initially posted on: <%= blog.created.toDateString() %></small></p>
                          <a href="/blogs/<%= blog._id %>">Read More</a>
                        </div>
                      </div>
                    </div>
                </div>
                
            </div>
        <% } %>
    </div>
</div>


<%- include("partials/footer") %>

