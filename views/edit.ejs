<%- include("partials/header") %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col border p-2 col-11 col-sm-10 col-md-9 col-lg-7">
            <h1 class="mb-4">Edit <%= blog.title %></h1>

            <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Title</label>
                    <input class="form-control" type="text" name="blog[title]" placeholder="Title" value="<%= blog.title %>" required>
                </div>
                <div class="form-group">
                    <label>Image</label>
                    <input class="form-control" type="text" name="blog[image]" placeholder="Image" value="<%= blog.image %>"required>
                </div>
                <div class="form-group">
                    <label>Blog Content</label>
                    <textarea class="form-control" rows="5" name="blog[body]" placeholder="Blog post goes here" required><%= blog.body %></textarea>
                </div>
                <button type="submit" class="btn btn-lg btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

<%- include("partials/footer") %>